@model System.Web.Mvc.ViewDataDictionary
@{
    Layout = "~/Views/Email/EmailMaster.cshtml";
    var program = (ewide.web.Models.CoachingProgram)Model["Program"];
}
<p>&nbsp;</p>
<p>Tax invoice for Program Id @program.Id in the amount of @string.Format("{0:C}", program.InvoiceAmount.ToString())</p>

<p>Coachee: @String.Format("{0} {1}", program.Coachee.FirstName, program.Coachee.LastName)</p>
<p>Coach: @String.Format("{0} {1}", program.Coach.FirstName, program.Coach.LastName)</p>
<p>Coach ABN: @program.Coach.ABN</p>
<p>Coach Address: @program.Coach.Address</p>
<p>Invoice Date (Current Date and Time): @DateTime.Now</p>
@if (program.CoachingSessions.Any())
{
    <h3>Sessions</h3>
    <ul>
        @foreach (var session in program.CoachingSessions)
        {
            <li>@session.StartedAt</li>
        }
    </ul>
}