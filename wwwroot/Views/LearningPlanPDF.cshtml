@model ewide.web.Models.LearningPlanDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <style>
        body {
            padding: 0px 50px;
            font-family: Verdana, Arial;
            color: #555 !important;
            font-size: 14px;
        }

        span, td, li {
            color: #777 !important;
        }

        h1 {
            font-size: 25px;
            padding: 5px 0 15px;
            margin: 0;
        }

        h2 {
            font-size: 19px;
            padding: 5px 0 15px;
            margin: 0;
        }

        h3 {
            font-size: 16px;
            padding: 5px 0 15px;
            margin: 0;
        }

        p {
            font-size: 14px;
            padding: 5px 0 15px;
            margin: 0;
        }

        h1.page-heading {
            float: left;
            font-size: 35px;
            padding: 45px 0 0px;
            font-weight: normal;
        }

        li { color: inherit !important; padding-bottom: 10px; }

        .logo {
            float: right;
            padding-right: 20px;
        }

            .logo img {
                width: 120px;
                margin-bottom: 25px;
            }

        hr {
            clear: both;
            border-bottom: 1px solid #ddd;
            border-top: 0;
            margin-bottom: 35px;
        }
        .padding-bottom { padding-bottom: 30px; }

        table { border-collapse: collapse; }
        td { color: #555 !important; vertical-align: bottom; }
        table.header td { padding-right: 20px; vertical-align: top;}

        
        .footer {
          text-align: right;
          padding-top: 30px;
        }

        .footer a {
          color: #9e9e9e;
          
          text-decoration: none;
        }
        .footer a:focus, .footer a:hover {
          color: #aaa;
          text-decoration: none;
        }

        .footer .logo {
            width: 75px;
            vertical-align: bottom;
        }

        .footer p {
            font-size: 11px;
            line-height: 18px;
            font-style: italic;
            margin: 10px 0;
            color: #aaa;
        }
        .credits .text { text-align:right; }
        .credits .text p { padding: 0 0 2px; margin: 0; }
    </style>
</head>
<body>
    <div class="logo">
        <img width="100" src="https://rightnow.oztrain.com.au/images/logo-vertical.png" />
    </div>
    <h1 class="page-heading">Learning Plan</h1>
    <hr />
    <table class="header" cellpadding="0" cellspacing="0">
        <tr>
            <td><p><strong>Coach</strong></p></td>
            <td><p>@String.Format("{0} {1}", Model.CoachingProgram.Coach.FirstName, Model.CoachingProgram.Coach.LastName)</p></td>
        </tr>
        <tr>
            <td><p><strong>Coachee</strong></p></td>
            <td><p>@String.Format("{0} {1}", Model.CoachingProgram.Coachee.FirstName, Model.CoachingProgram.Coachee.LastName)</p></td>
        </tr>
        <tr>
            <td><p class="padding-bottom"><strong>Date</strong></p></td>
            <td><p>@DateTime.Now.ToString("dd/MM/yyyy h:mmtt")</p></td>
        </tr>
    </table>
    <hr />
    @Html.Raw(Model.LearningPlan)

    <div class="footer">
        <hr />
        <table class="credits" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td class="text" style=""><p><a href="http://www.oztrain.com.au" target="_blank">right.<strong>now.</strong> developed by&nbsp;</a></p></td>
                <td width="75"><a href="http://www.oztrain.com.au" target="_blank"><img class="logo" src="https://rightnow.oztrain.com.au/images/oztrain-logo.png" /></a></td>
            </tr>
        </table>
        
    </div>
</body>
</html>
